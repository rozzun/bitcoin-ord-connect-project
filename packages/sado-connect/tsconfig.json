{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node",
      "module": "esnext",
      "lib": ["es2017", "dom"],
      "target": "es5",
      "jsx": "react",
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  